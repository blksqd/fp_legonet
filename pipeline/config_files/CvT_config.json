{
  "paths": {
    "base_dir": "../",
    "csv_path": "../",
    "img_dir": "../",
    "model_save_path": "../CvT.h5"
  },
  "training": {
    "validation_split": 0.2,
    "fraction": 0.8,
    "sample_fraction": 1.0,
    "batch_size": 32,
    "epochs": 50,
    "initial_learning_rate": 0.001,
    "learning_rate_decay": 0.9,
    "patience": 10,
    "reduce_lr_factor": 0.5,
    "reduce_lr_patience": 5,
    "min_lr": 1e-7
  },
  "data_augmentation": {
    "rescale": 0.00392156862745098,
    "rotation_range": 30,
    "width_shift_range": 0.2,
    "height_shift_range": 0.2,
    "shear_range": 0.2,
    "zoom_range": 0.2,
    "horizontal_flip": true,
    "vertical_flip": false,
    "brightness_range": [0.8, 1.2]
  },
  "model_architecture": {
    "input_shape": [64, 64, 3],
    "num_classes": 1,
    "cvt_blocks": [
      {
        "filters": 64,
        "num_heads": 4,
        "mlp_dim": 128
      },
      {
        "filters": 128,
        "num_heads": 8,
        "mlp_dim": 256
      },
      {
        "filters": 256,
        "num_heads": 16,
        "mlp_dim": 512
      }
    ],
    "final_dense_layer": {
      "mlp_dim": 512,
      "dropout_rate": 0.1
    },
    "output_layer": {
      "units": 1,
      "activation": "sigmoid"
    }
  },
  "callbacks": {
    "early_stopping": {
      "patience": 10,
      "restore_best_weights": true
    },
    "reduce_lr_on_plateau": {
      "factor": 0.5,
      "patience": 5,
      "min_lr": 1e-7
    }
  }
}
